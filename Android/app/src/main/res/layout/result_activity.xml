<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Latar Belakang Lingkaran (Konsisten dengan halaman lain) -->
    <View
        android:id="@+id/circleBgResult"
        android:layout_width="400dp"
        android:layout_height="400dp"
        android:background="@drawable/bg_circle"
        android:layout_marginEnd="-150dp"
        android:layout_marginTop="-150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Ikon Sukses -->
        <ImageView
            android:id="@+id/imgStatus"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@android:drawable/checkbox_on_background"
            app:tint="#4CAF50" />

        <TextView
            android:id="@+id/txtStatusTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Conversion Success!"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtFileNameResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="your_file_name.pdf"
            android:textColor="#757575"
            android:textSize="16sp" />

        <!-- Tombol Aksi -->
        <Button
            android:id="@+id/btnOpenFile"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="#4CAF50"
            android:text="Open File"
            android:textAllCaps="false"
            android:textSize="18sp"
            />

        <Button
            android:id="@+id/btnBackToHome"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="8dp"
            android:text="Back to Home"
            android:textAllCaps="false"
            android:textColor="#757575" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
